# Environment variables for Finance SMS Logger
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production  # Replace with your actual secret key
DEBUG=True

# Logging Configuration
LOG_LEVEL=INFO

# Google Sheets Configuration
GSHEET_SHARED_WORKBOOK_ID=your-shared-workbook-id-here # Replace with your actual shared workbook ID

# API Authentication
API_KEY=your-secure-api-key-here  # Replace with your actual API key

# API Configuration (optional overrides)
API_VERSION=v1
MAX_SMS_LENGTH=1000
MIN_SMS_LENGTH=10
