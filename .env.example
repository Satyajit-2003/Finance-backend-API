# Environment variables for Finance SMS Logger
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Logging Configuration
LOG_LEVEL=INFO

# Google Sheets Configuration
SHARED_WORKBOOK_ID=your-shared-workbook-id-here

# Editor Configuration (comma-separated emails)
EDITOR_EMAILS=your-email@example.com

# API Configuration (optional overrides)
API_VERSION=v1
MAX_SMS_LENGTH=1000
MIN_SMS_LENGTH=10
